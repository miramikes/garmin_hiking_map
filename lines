waterway=stream & natural!=water & whitewater:rapid_grade=* {set name='${whitewater:rapid_name}* RG* ${whitewater:rapid_grade}' | 'RG* ${whitewater:rapid_grade}' | '${whitewater:rapid_name}' } [0x10211 resolution 22]
waterway=drain 	& natural!=water & whitewater:rapid_grade=* {set name='${whitewater:rapid_name}* RG* ${whitewater:rapid_grade}' | 'RG* ${whitewater:rapid_grade}' | '${whitewater:rapid_name}' } [0x10211 resolution 23]
waterway=ditch 	& natural!=water & whitewater:rapid_grade=* {set name='${whitewater:rapid_name}* RG* ${whitewater:rapid_grade}' | 'RG* ${whitewater:rapid_grade}' | '${whitewater:rapid_name}' } [0x10211 resolution 23]

waterway=canal 	& natural!=water & whitewater:rapid_grade=* {set name='${whitewater:rapid_name}* RG* ${whitewater:rapid_grade}' | 'RG* ${whitewater:rapid_grade}' | '${whitewater:rapid_name}' } [0x10210 resolution 18]

waterway=river 	& natural!=water & whitewater:rapid_grade!=* & whitewater:section_grade=* {set name='${whitewater:section_name}* SG* ${whitewater:section_grade}' | 'SG*  ${whitewater:section_grade}' | '${whitewater:section_name}' } [0x10210 resolution 18]
waterway=stream & natural!=water & whitewater:rapid_grade!=* & whitewater:section_grade=* {set name='${whitewater:section_name}* SG* ${whitewater:section_grade}' | 'SG*  ${whitewater:section_grade}' | '${whitewater:section_name}' } [0x10211 resolution 22]
